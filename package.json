{
  "name": "pulitzer",
  "version": "0.7.1",
  "description": "Image resizing proxy",
  "main": "src/index.ts",
  "engines": {
    "node": ">= 12.0.0"
  },
  "scripts": {
    "start": "node ./build/index.js",
    "debug": "NODE_ENV=development nodemon",
    "build": "tsc",
    "clean": "rm -rf build",
    "validate": "npm run validate:types && npm run lint && npm run test",
    "test": "jest",
    "fix": "npm run fix:js",
    "fix:js": "eslint ${ESLINT_OPTS} --fix --ext .js --ext .ts src",
    "lint": "npm run lint:js",
    "lint:js": "eslint ${ESLINT_OPTS} --ext .js --ext .ts src",
    "validate:types": "npm run build -- --noEmit"
  },
  "keywords": [
    "image",
    "resizing",
    "proxy",
    "http"
  ],
  "author": "Luis Nabais <luis@nabais.me>",
  "license": "MIT",
  "repository": "git@github.com:d3x7r0/pulitzer.git",
  "dependencies": {
    "connection-string": "^4.3.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "minio": "^7.0.18",
    "opossum": "^6.0.0",
    "pino-http": "^5.5.0",
    "sharp": "^0.28.0",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@nonsensebb/eslint-config-typescript": "^0.4.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/minio": "^7.0.7",
    "@types/node": "^14.14.37",
    "@types/opossum": "^4.1.1",
    "@types/pino": "^6.3.6",
    "@types/pino-http": "^5.4.0",
    "@types/sharp": "^0.27.3",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "pino": "^6.11.2",
    "pino-pretty": "^4.7.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src",
      ".env"
    ],
    "exec": "node -r ts-node/register src/index.ts",
    "ext": "js,ts,env"
  }
}
