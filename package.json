{
  "name": "pulitzer",
  "version": "0.3.1",
  "description": "Image resizing proxy",
  "main": "src/index.ts",
  "engines": {
    "node": ">= 12.0.0"
  },
  "scripts": {
    "start": "node ./build/index.js",
    "debug": "nodemon",
    "build": "tsc",
    "clean": "rm -rf build",
    "test": "jest",
    "fix": "npm run fix:js",
    "fix:js": "eslint ${ESLINT_OPTS} --fix --ext .js --ext .ts src",
    "lint": "npm run lint:js",
    "lint:js": "eslint ${ESLINT_OPTS} --ext .js --ext .ts src"
  },
  "keywords": [
    "image",
    "resizing",
    "proxy",
    "http"
  ],
  "author": "Luis Nabais <luis@nabais.me>",
  "license": "MIT",
  "repository": "git@github.com:d3x7r0/pulitzer.git",
  "dependencies": {
    "connection-string": "^3.4.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "minio": "^7.0.16",
    "opossum": "^5.0.0",
    "sharp": "^0.25.4"
  },
  "devDependencies": {
    "@nonsensebb/eslint-config-typescript": "^0.1.7",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@types/minio": "^7.0.5",
    "@types/node": "^14.0.13",
    "@types/opossum": "^4.1.0",
    "@types/sharp": "^0.25.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.3.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src",
      ".env"
    ],
    "exec": "node -r ts-node/register src/index.ts",
    "ext": "js,ts,env"
  }
}
