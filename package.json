{
  "name": "pulitzer",
  "version": "0.8.0-alpha",
  "description": "Image resizing proxy",
  "main": "src/index.ts",
  "engines": {
    "node": ">= 18.0.0"
  },
  "scripts": {
    "start": "node ./build/index.js",
    "debug": "NODE_ENV=development nodemon | pino-pretty",
    "build": "tsc",
    "clean": "rm -rf build",
    "validate": "npm run validate:types && npm run lint && npm run test",
    "test": "jest",
    "fix": "npm run fix:js",
    "fix:js": "eslint ${ESLINT_OPTS} --fix --ext .js --ext .ts src",
    "lint": "npm run lint:js",
    "lint:js": "eslint ${ESLINT_OPTS} --ext .js --ext .ts src",
    "validate:types": "npm run build -- --noEmit"
  },
  "keywords": [
    "image",
    "resizing",
    "proxy",
    "http"
  ],
  "author": "Luis Nabais <luis@nabais.me>",
  "license": "MIT",
  "repository": "git@github.com:nonsensebb/pulitzer.git",
  "dependencies": {
    "connection-string": "^4.3.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "http-terminator": "^3.2.0",
    "fast-url-parser": "^1.1.3",
    "minio": "^7.0.32",
    "opossum": "^7.0.1",
    "pino": "^8.8.0",
    "pino-http": "^8.3.0",
    "sharp": "^0.31.3",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@nonsensebb/eslint-config-typescript": "^0.7.0",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/sharp": "^0.31.0",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.31.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src",
      ".env"
    ],
    "exec": "node -r ts-node/register src/index.ts",
    "ext": "js,ts,env"
  }
}
