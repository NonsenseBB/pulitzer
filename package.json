{
  "name": "pulitzer",
  "version": "0.8.0",
  "description": "Image resizing proxy",
  "main": "dist/src/index.js",
  "engines": {
    "node": ">= 18.0.0"
  },
  "scripts": {
    "start": "node ./build/index.js",
    "debug": "NODE_ENV=development nodemon | pino-pretty",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf coverage build src/**/*.generated.*",
    "validate": "run-s lint test",
    "test": "npm run test:js",
    "test:js": "vitest --run --passWithNoTests",
    "test:js:update": "vitest --run -u --passWithNoTests",
    "test:ci": "CI=true vitest --coverage --passWithNoTests",
    "lint": "run-s lint:types lint:js",
    "lint:fix": "npm run lint:fix:js",
    "lint:fix:js": "eslint --fix .",
    "lint:js": "eslint .",
    "lint:types": "tsc --noEmit"
  },
  "keywords": [
    "image",
    "resizing",
    "proxy",
    "http"
  ],
  "author": "Luis Nabais <luis@nabais.me>",
  "license": "MIT",
  "repository": "git@github.com:nonsensebb/pulitzer.git",
  "dependencies": {
    "connection-string": "^4.4.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-terminator": "^3.2.0",
    "minio": "^7.1.3",
    "opossum": "^8.1.1",
    "pino": "^8.15.3",
    "pino-http": "^8.5.0",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@swc/core": "^1.3.91",
    "@swc/helpers": "^0.5.2",
    "@types/express": "^4.17.18",
    "@types/node": "^18.11.18",
    "@types/opossum": "^8.1.3",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitest/coverage-istanbul": "^0.34.4",
    "eslint": "^8.50.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^10.2.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4"
  },
  "nodemonConfig": {
    "exec": "node -r ts-node/register src",
    "ext": ".js,.ts,.cjs,.mjs,.cts,.mts,.json,.env",
    "delay": 1800,
    "ignore": [
      ".git",
      "vitest.config.mts",
      "tests/**",
      "dist/**"
    ],
    "watch": [
      "**",
      ".env",
      ".env.*"
    ]
  }
}
