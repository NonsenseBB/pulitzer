{
  "name": "pulitzer",
  "version": "0.3.5",
  "description": "Image resizing proxy",
  "main": "src/index.ts",
  "engines": {
    "node": ">= 12.0.0"
  },
  "scripts": {
    "start": "node ./build/index.js",
    "debug": "nodemon",
    "build": "tsc",
    "clean": "rm -rf build",
    "validate": "npm run validate:types && npm run lint && npm run test",
    "test": "jest",
    "fix": "npm run fix:js",
    "fix:js": "eslint ${ESLINT_OPTS} --fix --ext .js --ext .ts src",
    "lint": "npm run lint:js",
    "lint:js": "eslint ${ESLINT_OPTS} --ext .js --ext .ts src",
    "validate:types": "npm run build -- --noEmit"
  },
  "keywords": [
    "image",
    "resizing",
    "proxy",
    "http"
  ],
  "author": "Luis Nabais <luis@nabais.me>",
  "license": "MIT",
  "repository": "git@github.com:d3x7r0/pulitzer.git",
  "dependencies": {
    "connection-string": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "minio": "^7.0.17",
    "opossum": "^5.1.1",
    "sharp": "^0.26.3"
  },
  "devDependencies": {
    "@nonsensebb/eslint-config-typescript": "^0.2.0",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/minio": "^7.0.6",
    "@types/node": "^14.14.13",
    "@types/opossum": "^4.1.1",
    "@types/sharp": "^0.26.1",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src",
      ".env"
    ],
    "exec": "node -r ts-node/register src/index.ts",
    "ext": "js,ts,env"
  }
}
